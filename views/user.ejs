<%- include ("./partials/header") %>

<div class="row">
    <div class="col s3">
        <%- include ("./partials/sidenav") %>
    </div>
    <div class="col s12 m9">
        <div class="card-panel bs">
            <span class="white-text">
                <h5>Find all you want here.</h5>
            </span>
        </div>
        <div class="row">
            <div class="col s12">
                <div class="card gs">
                    <div class="card-content white-text">
                        <span class="card-title">Contact Info</span>
                        <p>Email: <a href="mailto:<%=founduser.contact.email%>"><%=founduser.contact.email%></a></p>
                        <p>Mobile: <a href="tel:<%=founduser.contact.mobile%>"><%=founduser.contact.mobile%></a></p>
                        <p>LinkedIn: <%=founduser.contact.linkedin%></p>
                        <p>Facebook: <%=founduser.contact.facebook%></p>
                        <p>Current Address: <%=founduser.contact.address%></p>
                    </div>
                    <div class="card-action">
                        <a class="modal-trigger" href="#UpdateUser">Update</a>
                    </div>
                </div>
            </div>
        </div>
        <table class="gs highlight responsive-table striped">
            <thead class="white-text">
                <tr>
                    <th>S.No</th>
                    <th>Resume Name</th>
                    <th>Availability</th>
                    <th>Creation Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i = 0; i < founduser.resume.length;i++){ %>
                <tr class="animated slideInUp delay-<%=i%>s">
                    <td>#<%=i+1%></td>
                    <td><a href="/viewResume/<%=founduser.resume[i]._id%>"><%=founduser.resume[i].resumename%></a></td>
                    <td><%=founduser.resume[i].availability%></td>
                    <td><%=(founduser.resume[i].created).toDateString()%></td>
                    <td><a href="/deleteresume/<%=founduser.resume[i]._id%>"
                            class="waves-effect bbs waves-light btn">Delete</a></td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<div id="UpdateUser" class="modal">

    <div class="modal-content">
        <h4>Update Contact Info</h4>
        <form action="/updateContact/<%=founduser._id%>" method="POST">
            <div class="row">
                <div class="input-field col s12 m6">
                    <i class="material-icons prefix">email</i>
                    <input id="icon_prefix" type="email" class="validate" name="email">
                    <label for="icon_prefix">Email:</label>
                </div>
                <div class="input-field col s12 m6">
                    <i class="material-icons prefix">smartphone</i>
                    <input id="icon_telephone" type="text" class="validate" name="mobile">
                    <label for="icon_telephone">Mobile:</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12 m6">
                    <i class="material-icons prefix">account_circle</i>
                    <input id="icon_prefix" type="text" class="validate" name="linkedin">
                    <label for="icon_prefix">LinkedIn:</label>
                </div>
                <div class="input-field col s12 m6">
                    <i class="material-icons prefix">face</i>
                    <input id="icon_telephone" type="text" class="validate" name="facebook">
                    <label for="icon_telephone">Facebook:</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <i class="material-icons prefix">home</i>
                    <textarea id="textarea1" class="materialize-textarea" name="address"></textarea>
                    <label for="textarea1">Contact Details:</label>
                </div>
            </div>
             <button class="btn waves-effect waves-light" type="submit" name="action">Update
    <i class="material-icons right">send</i>
  </button>
        </form>
    </div>
</div>

<%- include ("./partials/footer") %>